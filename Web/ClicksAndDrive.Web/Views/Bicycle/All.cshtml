@using ClicksAndDrive.Web.ViewModels.Bicycles
@model IEnumerable<BicycleViewModel>
@{
    ViewData["Title"] = Model.First().Type.ToString() + "Велосипеди";
}

<img src="https://www.bikecenter.bg/media/catalog/category/planinski-velosipedi_1.jpg" class="center" alt="Responsive image">

<div class="text-center">
    <h1 class="display-4">Велосипеди</h1>
</div>

@foreach (var bicycle in this.Model)
{
    <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4">
        <div class="col-md-8">
            <div class="card" style="width: 20rem;">
                @if (bicycle.ImageUrl != null)
                {
                    <img src="~/@bicycle.ImageUrl.Replace("wwwroot/","")" class="card-img-top" alt="@bicycle.Made">
                }
            </div>
            <div class="col-md-6">
                <div class="card-body">
                    <h5 class="card-title">@bicycle.Made</h5>
                    <p class="card-text">Цена на час: @bicycle.PriceForHour.ToString("0.00") BGN.</p>
                    <a asp-action="Details" asp-route-id="@bicycle.Id" class="btn btn-info">Детайли</a>
                </div>
            </div>
        </div>
    </div>
}



@model ClicksAndDrive.Data.Models.Bicycle
@{
    ViewData["Title"] = "Велосипед: " + this.Model.Made;
}

<div class="bicycle mb-3">
    @if (Model.ImageUrl != null)
    {
        <img src="~/@Model.ImageUrl.Replace("wwwroot/","")" class="card-img-top" alt="">
    }
    <div class="bicycle-body">
        <h5 class="bicycle-title text-center">@Model.Made</h5>
        <p class="bicycle-text">Тип: @Model.Type</p>
        <p class="bicycle-text">Размер: @Model.Size</p>
        <p class="bicycle-text">Размер на гумите: @Model.SizeOfTires</p>
        <p class="bicycle-text">Скорости: @Model.Speeds</p>
        <p class="bicycle-text">Цена на час: @Model.PriceForHour</p>
        <p class="bicycle-text">Описание: @Model.Description</p>
    </div>
    <a asp-controller="Order" asp-action="LoanVehicle" asp-route-vehicleId="@this.Model.Id" asp-route-type="@this.Model.GetType().Name" class="btn btn-primary">Наеми</a>
    @if (this.User.IsInRole("Administrator"))
    {
        <a asp-area="Administration" asp-controller="Bicycle" asp-action="Edit" asp-route-id="@this.Model.Id" class="btn btn-primary">Редактирай</a>
        <a asp-area="Administration" asp-action="Delete" asp-route-id="@this.Model.Id" asp-route-type="@this.Model.Type" onclick="return DeleteItem('велосипед')" class="btn btn-danger">Изтрий</a>
    }
</div>

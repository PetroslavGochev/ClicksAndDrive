@using ClicksAndDrive.Web.ViewModels.Administration.Orders;
@model IEnumerable<OrdersViewModel>


<div class="table-container">
    <table id="customers">
        <tr>
            <th>#</th>
            <th>Ид</th>
            <th>Статус</th>
            <th>Детайли</th>
        </tr>
        @{
            int number = 1;
            @foreach (var item in this.Model)
            {
                <tr>
                    <td>@number</td>
                    <td>@item.Id</td>
                    <td>@item.Status.ToString()</td>
                    <td> <a asp-action="DetailOrders" asp-route-id="@item.Id">Детайли</a></td>
                </tr>
                number++;
            }
        }
    </table>
</div>
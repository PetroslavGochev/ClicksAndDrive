@using ClicksAndDrive.Web.ViewModels.Orders;
@model LoanOrderViewModel
@{
    ViewData["Title"] = "Наемете велосипед";
}

<form method="post" class="col-md-6 center">
    <h2 class="text-center" style="margin-bottom: 20px">Форма за наемане</h2>

    <div class="row" style="margin-bottom: 10px;">
        <div class="col-md-6">
            <label class="label">First Name*</label>

            <input class="form-control" placeholder="" type="text" />
        </div>

        <div class="col-md-6">
            <label class="label">Last Name*</label>

            <input class="form-control" placeholder="" type="text" />
        </div>

        <div class="col-md-12" style="margin-top: 10px">
            <label class="label">Email*</label>

            <input class="form-control" placeholder="" type="text" />
        </div>

        <div class="col-md-6" style="margin-top: 10px">
            <label class="label">Quantity? *</label>

            <input class="form-control" placeholder="" type="text" />
        </div>

        <div class="col-md-6" style="margin-top: 10px">
            <label class="label">How many days? *</label>

            <input class="form-control" placeholder="" type="text" />
        </div>

        <div class="form-group col-md-12" style="margin-top: 10px">
            <label asp-for="DateFrom" class="label"></label>

            <input type="datetime-local" min="@DateTime.Now.ToString()" max="2021-06-09T09:30" class="form-control">

            <span asp-validation-for="DateFrom" class="text-danger"></span>
        </div>

        <div class="form-group col-md-12">
            <label asp-for="Address"></label>

            <input asp-for="Address" class="form-control" />

            <span asp-validation-for="Address" class="text-danger"></span>
        </div>

        <div class="col-md-12" style="margin-top: 10px">
            <label class="label">Other*</label>

            <textarea id="w3review" name="w3review" rows="10" cols="79" style="border: 1px solid #d4d4d4; border-radius: 5px;"></textarea>
        </div>
    </div>

    <input asp-for="UserId" class="form-control" placeholder="@this.Model.UserId" type="hidden" />
    
    <input asp-for="VehicleType" class="form-control" placeholder="@this.Model.VehicleType" type="hidden" />
    
    <input asp-for="PriceForHour" class="form-control" placeholder="@this.Model.PriceForHour" type="hidden" />
    
    <input asp-for="ImageUrl" class="form-control" placeholder="@this.Model.ImageUrl" type="hidden" />
    
    <input type="submit" class="btn" style="background-color: #ED1C24; color: white;" />
</form>
@using ClicksAndDrive.Web.ViewModels.ElectricScooter
@model AddElectricScooterViewModel
@{
    ViewData["Title"] = "Добавете нов електрически скутер";
}
<h1>Добавете нов електрически скутер</h1>

<form method="post" class="col-md-6" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="Made">Made *</label>
        <input asp-for="Made" class="form-control" />
        <span asp-validation-for="Made" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="MaximumSpeed">MaximumSpeed *</label>
        <input asp-for="MaximumSpeed" class="form-control" />
        <span asp-validation-for="MaximumSpeed" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Mileage">Mileage *</label>
        <input asp-for="Mileage" class="form-control" />
        <span asp-validation-for="Mileage" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="PriceForHour">PriceForHour *</label>
        <input asp-for="PriceForHour" class="form-control" />
        <span asp-validation-for="PriceForHour" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Image">Image *</label>
        <input asp-for="Image" class="form-control" />
        <span asp-validation-for="Image" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea cols="10" asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <p>* - fields are required</p>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>
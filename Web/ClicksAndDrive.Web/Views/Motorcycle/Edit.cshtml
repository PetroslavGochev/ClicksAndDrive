@using ClicksAndDrive.Data.Models.Enums
@using ClicksAndDrive.Web.ViewModels.Motorcycles
@model EditMotorcycleViewModel
@{
    ViewData["Title"] = "Редактирайте мотора: " + Model.Made;
}

<form method="post" enctype="multipart/form-data">
    <div class="form-group row">
        <label asp-for="Type" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-5">
            <select asp-for="Type" class="form-control"
                    asp-items="@Html.GetEnumSelectList<MotorcycleType>()">
            </select>
            <span asp-validation-for="Type" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Made" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-5">
            <input asp-for="Made" class="form-control" placeholder="Made" />
            <span asp-validation-for="Made" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Transmission" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-5">
            <select asp-for="Transmission" class="form-control"
                    asp-items="@Html.GetEnumSelectList<TransmissionType>()">
            </select>
            <span asp-validation-for="Transmission" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="PriceForHour" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-5">
            <input asp-for="PriceForHour" class="form-control" placeholder="PriceForHour" />
            <span asp-validation-for="PriceForHour" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="IsAvailable" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-5">
            <select class="form-control" asp-for="IsAvailable">
                <option value="True">Да</option>
                <option value="False">Не</option>
            </select>
            <span asp-validation-for="IsAvailable" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Image" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-5">
            <input asp-for="Image" class="form-control" placeholder="Image" />
            <span asp-validation-for="Image" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Description" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-5">
            <textarea cols="10" asp-for="Description" class="form-control" placeholder="Description"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
    </div>
    <a asp-action="Details" asp-route-id="@this.Model.Id" class="btn btn-primary">Назад</a>
    <button type="submit" asp-route-type="@this.Model.Type" onclick="return EditItem()" class="btn btn-primary">Промени</button>
</form>

@using ClicksAndDrive.Web.ViewModels.Motorcycles
@using ClicksAndDrive.Data.Models.Enums 
@model DetailsMotorcycleViewModel
@{
    ViewData["Title"] = "Мотор: " + Model.Made;
}

<div class="bicycle mb-3">
    <img src="" class="bicycle-img-top" alt="">
    <div class="bicycle-body">
        <h5 class="bicycle-title text-center">@Model.Made</h5>
        <p class="bicycle-text">Тип: @Model.Type</p>
        <p class="bicycle-text">Цена на час: @Model.PriceForHour</p>
        <p class="bicycle-text">Описание: @Model.Description</p>
    </div>
    <a asp-controller="Order" asp-action="LoanVehicle" asp-route-vehicleId="@this.Model.Id" asp-route-type="@VehicleType.Motorcycle" asp-route-priceForHour="@this.Model.PriceForHour" class="btn btn-primary">Наеми</a>
    @if (this.User.IsInRole("Administrator"))
    {
        <a asp-area="Administration" asp-controller="Motorcycle" asp-action="Edit" asp-route-id="@this.Model.Id" class="btn btn-primary">Редактирай</a>
        <a asp-area="Administration" asp-action="Delete" asp-route-id="@this.Model.Id" asp-route-type="@this.Model.Type" onclick="return DeleteItem('мотор')" class="btn btn-danger">Изтрий</a>
    }
</div>

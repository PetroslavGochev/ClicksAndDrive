@using ClicksAndDrive.Common
@{
    this.ViewData["Title"] = "Clicks And Drive";
}

<div>
    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="3"></li>
        </ol>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img class="d-block w-100" style="width: 1000px; height:600px; margin: 0 auto" src="https://wilier.com/sites/default/files/website_home_ogi_6.png" alt="First slide">
                <div class="carousel-caption">
                    <h1 class="display-2">Шосейни Велосипеди</h1>
                </div>
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" tyle="width: 1000px; height:600px; margin: 0 auto" src="https://www.bikecenter.bg/media/catalog/category/gradski.jpg" alt="Second slide">
                <div class="carousel-caption">
                    <h1 class="display-2">Градски Велосипеди</h1>
                </div>
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="https://m.netinfo.bg/media/images/39318/39318609/991-ratio-elektricheska-trotinetka.jpg" alt="Third slide">
                <div class="carousel-caption">
                    <h1 class="display-2">Електрически скутери</h1>
                    <h3>Изберете вашия електрически скутер</h3>
                    <button type="button" class="btn btn-outline-light btn-lg">Детайли</button>
                </div>
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="https://wilier.com/sites/default/files/website_home_ogi_6.png" alt="Fourth slide">
                <div class="carousel-caption">
                    <h1 class="display-2">Мотори</h1>
                    <h3>Изберете вашия мотор</h3>
                    <button type="button" class="btn btn-outline-light btn-lg">Детайли</button>
                </div>
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>

    <h1 style="text-align: center; margin-top: 20px; margin-bottom: 30px;">FEEL FREE IN SOZOPOL</h1>

    <hr style="width: 500px" />

    <h3 style="text-align: center;">
        Take up the adventure and explore the best Black Sea city.
    </h3>

    <div style="display: flex; flex-wrap: wrap; margin-top: 30px;">
        <div class="hover-card-container">
            <img src="https://i5.walmartimages.com/asr/7dfa7020-455e-4ed3-b841-0f2f019a571b_1.1b5f07fcf4130781dedd223ceeb7556b.jpeg?odnWidth=612&odnHeight=612&odnBg=ffffff" alt="Avatar" class="image" style="width:500px; height: 400px;">
            <div class="middle" style="left: 45%;">
                <a class="text"  asp-area="" asp-controller="Bicycle" asp-action="All" style="background-color: #ED1C24; color: white;">Bikes</a>
            </div>
        </div>

        <div class="hover-card-container">
            <img src="https://m.media-amazon.com/images/I/71javkDgGjL._UY560_.jpg" alt="Avatar" class="image" style="width:500px; height: 400px; margin-left: 50px;">
            <div class="middle" style="left: 55%;">
                <a class="text" asp-area="" asp-controller="Car" asp-action="All" style="background-color: #ED1C24; color: white;">Cars</a>
            </div>
        </div>

        <div class="hover-card-container" style="margin-top: 15px">
            <img src="https://www.uber-assets.com/image/upload/f_auto,q_auto:eco,c_fill,w_956,h_537/v1570191252/assets/7e/dacd44-dae2-4b53-8cbd-575e6d661ad6/original/generic-scooter.png" alt="Avatar" class="image" style="width:500px; height: 400px;">
            <div class="middle" style="left: 45%;">
                <a class="text" asp-area="" asp-controller="ElectricScooter" asp-action="All" style="background-color: #ED1C24; color: white;">E-Scooter</a>
            </div>
        </div>

        <div class="hover-card-container" style="margin-top: 15px;">
            <img src="https://kartsareus2.com/wp-content/uploads/2019/02/VIP.jpg" alt="Avatar" class="image" style="width:500px; height: 400px; margin-left: 50px;">
            <div class="middle" style="left: 55%;">
                <a class="text" asp-area="" asp-controller="Motorcycle" asp-action="All" style="background-color: #ED1C24; color: white;">Motopeds</a>
            </div>
        </div>
    </div>
</div>


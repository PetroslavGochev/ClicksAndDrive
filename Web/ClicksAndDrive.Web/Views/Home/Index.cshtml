@using ClicksAndDrive.Common
@{
    this.ViewData["Title"] = "Clicks And Drive";
}

<div>
    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="3"></li>
        </ol>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img class="d-block w-100" style="width: 1000px; height:600px; margin: 0 auto" src="https://wilier.com/sites/default/files/website_home_ogi_6.png" alt="First slide">
                <div class="carousel-caption">
                    <h1 class="display-2">Велосипеди</h1>
                    <h3>Изберете вашия велосипед</h3>
                    <button type="button" class="btn btn-outline-light btn-lg">Детайли</button>
                </div>
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" tyle="width: 1000px; height:600px; margin: 0 auto" src="https://vergoulis.com/wp-content/uploads/2021/04/rent-car-astypalaia-vergoulis-1024x683.jpg" alt="Second slide">
                <div class="carousel-caption">
                    <h1 class="display-2">Автомобили</h1>
                    <h3>Изберете вашия автомобил</h3>
                    <button type="button" class="btn btn-outline-light btn-lg">Детайли</button>
                </div>
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="https://wilier.com/sites/default/files/website_home_ogi_6.png" alt="Third slide">
                <div class="carousel-caption">
                    <h1 class="display-2">Електрически скутери</h1>
                    <h3>Изберете вашия електрически скутер</h3>
                    <button type="button" class="btn btn-outline-light btn-lg">Детайли</button>
                </div>
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="https://wilier.com/sites/default/files/website_home_ogi_6.png" alt="Fourth slide">
                <div class="carousel-caption">
                    <h1 class="display-2">Мотори</h1>
                    <h3>Изберете вашия мотор</h3>
                    <button type="button" class="btn btn-outline-light btn-lg">Детайли</button>
                </div>
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>

    <h1 style="text-align: center; margin-top: 20px; margin-bottom: 30px;">FEEL FREE IN SOZOPOL</h1>

